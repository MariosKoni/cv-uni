doctype html
html(lang='en', dir='ltr')
  head
    meta(charset='utf-8')
    title Home
    link(rel='stylesheet', type='text/css', href='semantic/dist/semantic.min.css')
    link(rel='stylesheet', type='text/css', href='style.css')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js', integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=', crossorigin='anonymous')
    script(src='semantic/dist/semantic.min.js')
    script(type='text/javascript', src='node_modules/semantic-ui-calendar/dist/calendar.min.js')
    link(rel='stylesheet', href='node_modules/semantic-ui-calendar/dist/calendar.min.css')
  body
    #wrapper.ui.container.index
      .ui.pointing.menu
        ul
          li
            .item
              .ui.icon.main
                i.home.link.icon
              a(href='/')
                i Search CV
      #personal_info 
        #pers_tags
          p(style="color:#008B8B") Personal Info
        #pers_inf
          p
            i.user.icon
            | #{i.firstName}
            | #{i.lastName}
          p 
            i.mobile.alternate.icon
            | #{i.phoneNumber}
          p
            i.at.icon
            | #{i.email}
          p
            span Gender 
            | #{i.gender}  | 
            span Date of Birth 
            |  #{i.dob} | 
            span Nationality 
            |  #{i.country[0].toUpperCase()} 

      #working_experience
        #work_title
          p(style="color:#008B8B") Working Experience
        #work_container
          if Array.isArray(i.jobPos)
            - for(var n = 0; n < i.startWorkDate.length;n++)
                div(class="work_details work-" + n)
                  p
                    b(style="color:#008B8B; font-size:90%;") #{i.startWorkDate[n]} - #{i.endWorkDate[n]}
                  p
                    b #{i.jobPos[n]}
                  p 
                    b Employee:  
                    | #{i.emp[n]}
                  p
                    b Address:
                    | #{i.address[n]}
                  p
                    b Duties:
                    | #{i.duties[n]}
          else 
            #work_details
                  p
                    b(style="color:#008B8B; font-size:90%;") #{i.startWorkDate} - #{i.endWorkDate}
                  p
                    b #{i.jobPos}
                  p 
                    b Employee:  
                    | #{i.emp}
                  p
                    b Address:
                    | #{i.address}
                  p
                    b Duties:
                    | #{i.duties}     
      #academic_experience
        #academic_title
          p(style="color:#008B8B") Academic experience
        #academic_container
          if Array.isArray(i.educationStartDate)
            - for(var m = 0; m < i.educationStartDate.length;m++)
                div(class="academic_details academic-" + m)
                  p
                    b(style="color:#008B8B; font-size:90%;") #{i.educationStartDate[m]} - #{i.educationalEndDate[m]}
                  p
                    b #{i.degree[m]}
                  p 
                    b University:  
                    | #{i.university[m]}
                  p
                    b City:
                    | #{i.city[m]}
                  p
                    b Majors:
                    | #{i.majors}
          else
            #academic_details
              p 
                b(style="color:#008B8B; font-size:90%;") #{i.educationStartDate} - #{i.educationalEndDate}
              p
                b #{i.degree}
              p 
                b University:  
                | #{i.university}
              p
                b City:
                | #{i.city}
              p
                b Majors:
                | #{i.majors}
                  
      #personal_skills
        #personal_skills_title
          p(style="color:#008B8B") Personal skills
        #personal_skills_container
          if Array.isArray(i.language)
            - for(var m = 0; m < i.language.length;m++)
                div(class="languages language-" + m)
                  p
                    b Language:
                    | #{i.language[m]}
                  p
                    b Level: 
                    | #{i.pickLevel[m]}
          else
            #languages
              p
                  b Language:
                  | #{i.language}
              p
                b Level: 
                | #{i.pickLevel}
          if Array.isArray(i.commSkills)
            b(style="color:#008B8B; font-size:90%;") Communication Skill
              - for(var m = 0; m < i.language.length;m++)
                div(class="communicationSkills skills-" + m)
                  p
                    b #{i.commSkills[m]}
          else
            if i.commSkills.length > 0
              #communicationSkills
                b(style="color:#008B8B; font-size:90%;") Communication Skill
                p
                  b #{i.commSkills}
      #additional_info
        #additional_info_title
          p(style="color:#008B8B") Additional info
        #additional_info_container
          #computerSkills
            b(style="color:#008B8B; font-size:90%;") Computer Skills
              if Array.isArray(i.compSkills)
                - for(var m = 0; m < i.compSkills.length;m++)
                  #compSkills
                    p #{i.compSkills[m]}
              else
                #compSkills
                  p #{i.compSkills}
          #organisationSkills
            b(style="color:#008B8B; font-size:90%;") Organization Skills
              if Array.isArray(i.orgSkills)
                #orgSkills
                  - for(var m = 0; m < i.orgSkills.length;m++)
                    p #{i.orgSkills[m]}
              else
                #orgSkills
                  p #{i.orgSkills}
          #otherSkills
            b(style="color:#008B8B; font-size:90%;") Other Skills
              if Array.isArray(i.otherSkills)
                #oSkills
                  - for(var m = 0; m < i.otherSkills.length;m++)
                    p #{i.otherSkills[m]}
              else
                #oSkills
                  p #{i.otherSkills}
          #drivingLicense
            b(style="color:#008B8B; font-size:90%;") Driving License
              if Array.isArray(i.drivingLicense)
                #dSkills
                  - for(var m = 0; m < i.drivingLicense.length;m++)
                      p #{i.drivingLicense[m]}
              else
                #dSkills
                  p #{i.drivingLicense}
          
          #add_info
            #add_info_title
              b(style="color:#008B8B; font-size:90%;") Additional Info
            #add_info_paragraph
              | #{i.additionalInfo}